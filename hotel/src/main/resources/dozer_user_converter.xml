<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
      http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <custom-converters>
            <converter type="com.example.hotel.mappers.MyCustomConverter">
                <class-a>com.example.hotel.dto.UserDto</class-a>
                <class-b>com.example.hotel.model.UserEntity</class-b>
            </converter>
        </custom-converters>
    </configuration>

    <mapping>
        <class-a>com.example.hotel.model.UserEntity</class-a>
        <class-b>com.example.hotel.dto.UserDto</class-b>
        <field>
            <a>birthDate</a>
            <b>birthday</b>
        </field>
    </mapping>

</mappings>